<%= render partial: 'order_header', locals: { title: "Step 4: Cost summary" , progress: 67 } %>

<%= bootstrap_form_for work_order, url: wizard_path, method: :put  do |f| %>

<% num_samples = work_order.num_samples %>
<% cost_per_sample = work_order.product.cost_per_sample %>
<% total = work_order.total_cost %>
<% total_length = number_to_currency(total, unit: '£').to_s.length %>

<pre>
Number of samples : <%= num_samples.to_s.rjust(total_length-3) %>
  Cost per sample : <%= number_to_currency(cost_per_sample, unit:'£').to_s.rjust(total_length) %>
--------------------<%= '-'*total_length %>
            Total : <%= number_to_currency(total, unit: '£').to_s.rjust(total_length) %>
</pre>

  <%= render 'buttons', work_order: work_order, f: f %>

<% end %>
