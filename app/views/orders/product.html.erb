<%= render partial: 'order_header', locals: { title: "Step 2: Select Product" , progress: 33 } %>

<%= bootstrap_form_for work_order, url: wizard_path, method: :put  do |f| %>

	<%= f.form_group :product do %>
		<% get_current_catalogues.each do |c| %>
			<h4><%= c.pipeline %></h4>
		   	<% c.products.each do |p| %>
		   		<%= f.radio_button :product, p.id, label: p.name, disabled: p.availability=='suspended' %>
					Cost per sample: <%= p.cost_per_sample %><br>
					Requested biomaterial type: <%= p.requested_biomaterial_type %><br>
					Product version: <%= p.product_version %><br>
					TAT: <%= p.TAT %><br>
					Description: <%= p.description %>
		   	<% end %>

	    <% end %>
    <% end %>

    <%= f.text_field :comment %>
    <%= f.date_select :desired_date %>

  <%= render 'buttons', work_order: work_order, f: f %>

<% end %>

