<%= render partial: 'order_header', locals: { title: "Step 1: Select Product" , progress: 20 } %>

<%= bootstrap_form_for work_order, url: wizard_path, method: :put  do |f| %>

  <%= f.fields_for :item, item do |item_fields| %>

    <%= item_fields.collection_radio_buttons(:product_id, Product.all, :id, :name,
      label: 'Please Select A Product') %>

  <% end %>

  <%= render 'buttons', work_order: work_order, f: f %>

<% end %>