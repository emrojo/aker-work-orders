<%= render partial: 'order_header', locals: { title: "Step 4: Confirm Order" , progress: 80 } %>

<%= bootstrap_form_for work_order, url: wizard_path, method: :put  do |f| %>

  <%= f.hidden_field :id %>

  <h2><%= item.product.name %></h2>

  <table class="table table-striped">

    <tbody>
      <% item.item_option_selections.each do |ios| %>
        <tr>
          <td><%= ios.product_option.name %></td>
          <td><%= ios.product_option_value.value %></td>
        </tr>
      <% end %>
    </tbody>

  </table>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Set UUID</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= work_order.set.name %></td>
        <td><%= work_order.set.uuid %></td>
      </tr>
    </tbody>
  </table>

  <%= render 'buttons', work_order: work_order, f: f %>

<% end %>