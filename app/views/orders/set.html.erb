<%= render partial: 'order_header', locals: { title: "Step 1: Select Set" , progress: 16 } %>

<%= bootstrap_form_for work_order, url: wizard_path, method: :put  do |f| %>

  <% if (work_order.set_uuid) %>
    <%= f.collection_radio_buttons(:original_set_uuid, [work_order.original_set],
         :id, lambda { |s| s.name+" (size "+work_order.num_samples.to_s+"): "+s.uuid },
          label: 'Selected set') %>
  <% else %>

      <%= f.collection_radio_buttons(:original_set_uuid, get_all_aker_sets,
         :id, lambda { |s| s.name+" (size "+s.meta["size"].to_s+"): "+s.uuid },
          label: 'Please select a set') %>

  <% end %>

  <%= render 'buttons', work_order: work_order, f: f %>

<% end %>
